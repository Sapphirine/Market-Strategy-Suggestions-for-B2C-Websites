<div class="inner-wrapper">
	<%= link_to '<< Back', combinations_path %>
	<div class="title">
		<h2>
			<%= print_attr_name(@combination.attr1) %>,
			<%= print_attr_name(@combination.attr2) %>,
			<%= print_attr_name(@combination.attr3) %> +
			<%= print_attr_name(@combination.expn) %>
		</h2>
	</div>
	<br>
	<% if @combination.expn == 'ins' %>
		<P><strong>Insurance code:</strong></p>
		<ul>
			<li>100 Life insurance, or other policies which provide benefits in case of death or disability</li>
			<li>110 Long Term Care insurance</li>
			<li>200 Automobile or other vehicle insurance</li>
			<li>300 Homeowner's insurance</li>
			<li>400 Renter's insurance</li>
			<li>500 Other types of non-health insurance </li>
			<li>900 Combined insurance</li>
		</ul>
	<% elsif @combination.expn == 'car' %>
		<P><strong>Car type code:</strong></p>
		<ul>
			<li>100 Automobile</li>
			<li>110 Truck, including vans</li>
		</ul>
	<% end %>
	<% i = 0 %>
	<% @combination.clusters.each do |cluster| %>
		<% i += 1 %>
		<div class="panel panel-info">
			<div class="panel-heading">
				<h3 class="panel-title"><%= "CLUSTER #{i}" %></h3>
			</div>
			<div class="panel-body">
				<p>
				  <strong><%= print_attr_name(@combination.attr1) %></strong>
				  <%= print_val(cluster.val1) %>
				</p>

				<p>
				  <strong><%= print_attr_name(@combination.attr2) %></strong>
				  <%= print_val(cluster.val2) %>
				</p>

				<p>
				  <strong><%= print_attr_name(@combination.attr3) %></strong>
				  <%= print_val(cluster.val3) %>
				</p>

				<p>
				  <strong><%= @combination.expn.upcase %></strong>
				  <%= print_val(cluster.expn_val) %>
				</p>
			</div>
		</div>

	<% end %>

</div>